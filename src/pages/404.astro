---
import BaseView from '../layouts/BaseView.astro';
import { SITE_TITLE } from '../consts';
import Icon from '../components/Icon.astro';
---

<BaseView title={`Page Not Found | ${SITE_TITLE}`} description="The page you're looking for doesn't exist or has been moved.">
    <div class="error-container">
        <div class="error-content">
            <div class="error-icon">
                <Icon icon="code" size="5rem" />
            </div>
            <h1>404</h1>
            <h2>Page Not Found</h2>
            <p>The page you're looking for doesn't exist or has been moved.</p>
            <div class="actions">
                <a href="/" class="primary-button">
                    <Icon icon="arrow-left" size="1.2em" />
                    <span>Back to Home</span>
                </a>
            </div>
        </div>
    </div>
</BaseView>

<style>
    .error-container {
        min-height: calc(100vh - var(--nav-height) - 4rem); /* Account for nav and footer */
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 4rem var(--content-padding, 2rem);
        background: linear-gradient(180deg, var(--background-color) 0%, var(--surface-color) 100%);
    }

    .error-content {
        max-width: 32rem;
        text-align: center;
        background-color: var(--background-color);
        border-radius: 1.5rem;
        padding: 3rem 2rem;
        box-shadow: var(--shadow-md);
        transform: translateY(-2rem); /* Offset to account for nav bar */
        animation: fadeIn 0.8s ease-out;
    }

    .error-icon {
        margin-bottom: 1.5rem;
        color: var(--primary-color);
        display: inline-flex;
        padding: 1.5rem;
        border-radius: 50%;
        background-color: var(--surface-color);
    }

    h1 {
        font-size: 5rem;
        font-weight: 700;
        margin: 0;
        line-height: 1;
        background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-fill-color: transparent;
    }

    h2 {
        font-size: 2rem;
        font-weight: 600;
        margin: 0.5rem 0 1.5rem;
    }

    p {
        color: var(--text-secondary);
        font-size: 1.125rem;
        margin-bottom: 2.5rem;
    }

    .actions {
        display: flex;
        justify-content: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .primary-button, .secondary-button {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        border-radius: 2rem;
        font-weight: 500;
        transition: all 0.2s ease;
        min-width: 10rem;
        justify-content: center;
    }

    .primary-button {
        background-color: var(--primary-color);
        color: white;
    }

    .primary-button:hover {
        background-color: var(--secondary-color);
        transform: translateY(-2px);
    }

    .secondary-button {
        background-color: var(--surface-color);
        color: var(--text-primary);
        border: 1px solid var(--border-color);
    }

    .secondary-button:hover {
        background-color: var(--background-color);
        transform: translateY(-2px);
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(0);
        }
        to {
            opacity: 1;
            transform: translateY(-2rem);
        }
    }

    @media (max-width: 768px) {
        .error-content {
            padding: 2rem 1.5rem;
        }

        h1 {
            font-size: 4rem;
        }

        h2 {
            font-size: 1.5rem;
        }

        .actions {
            flex-direction: column;
            gap: 0.75rem;
        }

        .primary-button, .secondary-button {
            width: 100%;
        }
    }

    @media (prefers-reduced-motion: reduce) {
        .error-content {
            animation: none;
            transform: none;
        }

        .primary-button:hover, .secondary-button:hover {
            transform: none;
        }
    }
</style>