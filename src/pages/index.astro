---
import { getCollection, getEntry } from 'astro:content';
import BaseView from '../layouts/BaseView.astro';
import GridView from '../components/GridView.astro';
import BlogEntries from '../components/BlogEntries.astro';

const INITIAL_COUNT = 3;
const LOAD_MORE_COUNT = 10;

const posts = (await getCollection('blog'))
    .filter((post) => !post.data.draft)
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())

const worksEntry = await getEntry('works', 'index');
const { Content: WorksContent } = worksEntry ? await worksEntry.render() : { Content: null };
---

<BaseView>
    <div class="home-container">
        <section class="section-block">
            <div class="content-container">
                <h2 class="section-title">Posts</h2>
                <div class="posts-container">
                    <GridView>
                        {
                            posts.map((post, i) => (
                                <div class:list={['post-item', { hidden: i >= INITIAL_COUNT }]} data-index={i}>
                                    <BlogEntries post={post} />
                                </div>
                            ))
                        }
                    </GridView>
                    {posts.length > INITIAL_COUNT && (
                        <button id="load-more" class="load-more-btn" data-visible={INITIAL_COUNT} data-total={posts.length} data-step={LOAD_MORE_COUNT}>
                            Show older posts
                        </button>
                    )}
                </div>
            </div>
        </section>

        <section class="section-block">
            <div class="content-container">
                <h2 class="section-title">Works</h2>
                <div class="works-container">
                    {WorksContent && <WorksContent />}
                </div>
            </div>
        </section>
    </div>
</BaseView>

<style>
:root {
    --max-content-width: 50rem;
    --content-padding: 2rem;
    --text-primary: #1d1d1f;
    --text-secondary: #86868b;
    --section-spacing: 2rem;
}

.home-container {
    width: 100%;
    overflow-x: hidden;
}

.section-block {
    padding: 1rem var(--content-padding) var(--section-spacing);
}

.section-block:first-child {
    padding-top: calc(5rem + env(safe-area-inset-top, 0px));
}

.section-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
}

.content-container {
    max-width: var(--max-content-width);
    margin: 0 auto;
}

.posts-container {
    width: 100%;
}

.posts-container :global(.grid-container) {
    padding: 0;
}

.posts-container :global(.blog-grid) {
    margin: 0;
}

.post-item {
    display: grid;
    grid-template-rows: 1fr;
    opacity: 1;
    transition: grid-template-rows 0.4s ease, opacity 0.4s ease;
}

.post-item.hidden {
    grid-template-rows: 0fr;
    opacity: 0;
}

.post-item > :global(*) {
    overflow: hidden;
}

.load-more-btn {
    display: block;
    margin: 1.5rem auto 0;
    padding: 0.6rem 1.5rem;
    background: transparent;
    color: var(--text-secondary);
    border: 1px solid var(--text-secondary);
    border-radius: 0.5rem;
    font-size: 0.9rem;
    cursor: pointer;
    transition: color 0.2s ease, border-color 0.2s ease;
}

.load-more-btn:hover {
    color: var(--text-primary);
    border-color: var(--text-primary);
}

.works-container {
    width: 100%;
}

@media (max-width: 768px) {
    :root {
        --content-padding: 1rem;
        --section-spacing: 1.5rem;
    }

    .section-block:first-child {
        padding-top: calc(5.5rem + env(safe-area-inset-top, 0px));
    }

    .section-title {
        font-size: 1.5rem;
    }
}

@media (prefers-color-scheme: dark) {
    :root {
        --text-primary: #ffffff;
        --text-secondary: #a1a1a6;
    }
}
</style>

<script>
    function initLoadMore() {
        const btn = document.getElementById('load-more');
        if (!btn) return;

        btn.addEventListener('click', () => {
            const visible = parseInt(btn.dataset.visible!, 10);
            const total = parseInt(btn.dataset.total!, 10);
            const step = parseInt(btn.dataset.step!, 10);
            const newVisible = Math.min(visible + step, total);

            document.querySelectorAll<HTMLElement>('.post-item').forEach((el) => {
                const index = parseInt(el.dataset.index!, 10);
                if (index < newVisible) {
                    el.classList.remove('hidden');
                }
            });

            btn.dataset.visible = String(newVisible);
            if (newVisible >= total) {
                btn.remove();
            }
        });
    }

    document.addEventListener('astro:page-load', initLoadMore);
</script>