---
import { getCollection } from 'astro:content';
import BaseView from '../layouts/BaseView.astro';
import GridView from '../components/GridView.astro';
import BlogEntries from '../components/BlogEntries.astro';

const posts = (await getCollection('blog'))
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
---

<BaseView>
    <div class="home-container">
        <section class="hero">
            <div class="hero-content">
                <h1>Welcome to tomtan.dev</h1>
                <p class="hero-description">Enjoy your spare time for Coffee and BigData open source!

</p>
            </div>
        </section>

        <div class="blog-section">
            <div class="content-container">
                <div class="posts-container">
                    <GridView>
                        {
                            posts.map((post) => (
                                !post.data.draft && (
                                    <BlogEntries post={post} />
                                )
                            ))
                        }
                    </GridView>
                </div>
            </div>
        </div>
    </div>
</BaseView>

<style>
:root {
    --max-content-width: 75rem;
    --content-padding: 2rem;
    --text-primary: #1d1d1f;
    --text-secondary: #86868b;
    --section-spacing: 4rem;
    --hero-bg: #ffffff;
}

.home-container {
    width: 100%;
    overflow-x: hidden;
}

.hero {
    background: var(--hero-bg);
    padding: 3rem var(--content-padding) 2rem;
    text-align: center;
    margin-bottom: 2rem;
}

.hero-content {
    max-width: var(--max-content-width);
    margin: 0 auto;
}

.hero h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    line-height: 1.1;
    letter-spacing: -0.02em;
}

.hero-description {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin: 0 auto;
    line-height: 1.4;
}

.blog-section {
    padding: 0 0 var(--section-spacing);
}

.content-container {
    max-width: var(--max-content-width);
    margin: 0 auto;
}

.posts-container {
    width: 100%;
}

@media (max-width: 1440px) {
    :root {
        --max-content-width: 65rem;
    }
}

@media (max-width: 1024px) {
    :root {
        --max-content-width: 55rem;
        --content-padding: 1.5rem;
    }
}

@media (max-width: 768px) {
    :root {
        --content-padding: 1rem;
        --section-spacing: 3rem;
    }

    .hero {
        padding: calc(5rem + env(safe-area-inset-top, 0px)) var(--content-padding) 1.5rem;
    }

    .hero h1 {
        font-size: 2.25rem;
    }

    .hero-description {
        font-size: 1.125rem;
    }
}

@media (prefers-color-scheme: dark) {
    :root {
        --text-primary: #ffffff;
        --text-secondary: #a1a1a6;
        --hero-bg: #1e1e1e;
    }

    .hero {
        background: var(--hero-bg);
    }
}
</style>