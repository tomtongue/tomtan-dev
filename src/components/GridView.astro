---
interface Props {
    variant?: 'offset' | 'small';
}

const { variant } = Astro.props;
---

<div class="grid-container">
    <ul class:list={['blog-grid', { offset: variant === 'offset', small: variant === 'small' }]}>
        <slot />
    </ul>
</div>

<style>
.grid-container {
    width: 100%;
    padding: 0 var(--content-padding, 2rem);
    margin: 0 auto;
    box-sizing: border-box;
}

.blog-grid {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    list-style: none;
    padding: 0;
    margin: 2rem auto;
    width: 100%;
    max-width: var(--content-width, 60rem);
}

@media (max-width: 768px) {
    .grid-container {
        padding: 0 1rem;
    }

    .blog-grid {
        gap: 1rem;
        width: 100%;
        margin-left: auto;
        margin-right: auto;
    }
}
</style>