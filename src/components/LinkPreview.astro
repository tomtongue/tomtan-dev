---
interface Props {
    href: string;
    children?: any;
}

const { href, children } = Astro.props;

// Get the text content of the link
const linkText = (await Astro.slots.render('default')).replace(/<[^>]*>/g, '').trim();

// Show preview ONLY for bare URLs (where linkText === href)
// Don't show preview for links with custom text (inline links like [text](url))
const isBareUrl = linkText === href || linkText === href.replace(/^https?:\/\//, '') || linkText === href.replace(/^https?:\/\/www\./, '');
const hasCustomText = linkText && linkText.length > 0 && !isBareUrl;

// Show preview if it's a bare URL and doesn't have custom text
const shouldShowPreviewCard = isBareUrl && !hasCustomText;

// Check if it's an external link
const isExternalLink = href && href.startsWith('http');

// Check if it's a GitHub file link
const isGitHubFileLink = href && (
    href.includes('github.com') &&
    (href.includes('/blob/') || href.includes('/tree/'))
);

// Parse GitHub URL to extract metadata
function parseGitHubUrl(url: string) {
    try {
        const urlObj = new URL(url);
        const pathParts = urlObj.pathname.split('/');

        // Format: /owner/repo/blob/branch/path/to/file.ext#L123
        if (pathParts.length >= 5) {
            const owner = pathParts[1];
            const repo = pathParts[2];
            const type = pathParts[3]; // blob or tree
            const branch = pathParts[4];
            const filePath = pathParts.slice(5).join('/');
            const lineNumber = urlObj.hash ? urlObj.hash.substring(1) : '';

            return {
                owner,
                repo,
                branch,
                filePath,
                lineNumber,
                fullPath: `${owner}/${repo}`,
            };
        }
    } catch (e) {
        return null;
    }
    return null;
}

// Parse URL to extract metadata for non-GitHub links
function parseUrl(url: string) {
    try {
        const urlObj = new URL(url);
        const domain = urlObj.hostname.replace('www.', '');
        const path = urlObj.pathname + urlObj.search + urlObj.hash;

        // Construct favicon URL using Google's favicon service
        const faviconUrl = `https://www.google.com/s2/favicons?domain=${domain}&sz=64`;

        // Truncate domain if too long (more than 30 characters)
        const displayDomain = domain.length > 30 ? domain.substring(0, 27) + '...' : domain;

        // Create a readable path display
        const displayPath = path.length > 60 ? path.substring(0, 57) + '...' : path;

        return {
            domain,
            displayDomain,
            fullUrl: url,
            path,
            displayPath,
            faviconUrl,
        };
    } catch (e) {
        return null;
    }
}

const githubData = isGitHubFileLink ? parseGitHubUrl(href) : null;
const linkData = isExternalLink && !isGitHubFileLink ? parseUrl(href) : null;

// Only show preview for links with no text content (not inline links)
const shouldShowPreview = shouldShowPreviewCard;
---

{isGitHubFileLink && githubData && shouldShowPreview ? (
    <div class="link-preview">
        <a href={href} class="preview-card github-card" target="_blank" rel="noopener noreferrer">
            <div class="preview-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
            </div>
            <div class="preview-content">
                <div class="preview-header">
                    <span class="preview-repo">{githubData.fullPath}</span>
                    {githubData.lineNumber && (
                        <span class="preview-line">#{githubData.lineNumber}</span>
                    )}
                </div>
                <div class="preview-path">{githubData.filePath}</div>
                <div class="preview-branch">Branch: {githubData.branch}</div>
            </div>
        </a>
    </div>
) : linkData && shouldShowPreview ? (
    <div class="link-preview">
        <a href={href} class="preview-card general-card" target="_blank" rel="noopener noreferrer">
            <div class="preview-icon">
                <img
                    src={linkData.faviconUrl}
                    alt={`${linkData.domain} favicon`}
                    class="favicon"
                    onerror="this.style.display='none'; this.nextElementSibling.style.display='block';"
                />
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: none;">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="2" y1="12" x2="22" y2="12"></line>
                    <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                </svg>
            </div>
            <div class="preview-content">
                <div class="preview-header">
                    <span class="preview-domain">{linkData.displayDomain}</span>
                </div>
                <div class="preview-path">{linkData.displayPath}</div>
            </div>
        </a>
    </div>
) : (
    <a href={href} target={href.startsWith('http') ? '_blank' : undefined} rel={href.startsWith('http') ? 'noopener noreferrer' : undefined}>
        <slot />
    </a>
)}

<style>
.link-preview {
