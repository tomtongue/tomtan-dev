}

.github-card .preview-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

/* General card: icon and content side by side */
.general-card {
    display: flex;
    align-items: flex-start;
}

.general-card .preview-icon {
    margin-top: 0.125rem;
}

.general-card .preview-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.preview-icon {
    flex-shrink: 0;
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #ffffff;
    border-radius: 0.375rem;
    color: #24292f;
}

.preview-icon svg {
    width: 16px;
    height: 16px;
}

.preview-icon .favicon {
    width: 16px;
    height: 16px;
    object-fit: contain;
}

.preview-content {
    flex: 1;
    min-width: 0;
}

.preview-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.preview-repo {
    font-weight: 600;
    font-size: 0.8125rem;
    color: #24292f;
}

.preview-line {
    font-size: 0.75rem;
    color: #656d76;
    font-family: ui-monospace, SFMono-Regular, SF Mono, Menlo, Consolas, Liberation Mono, monospace;
}

.preview-domain {
    font-weight: 600;
    font-size: 0.8125rem;
    color: #24292f;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.preview-path {
    font-size: 0.75rem;
    color: #656d76;
    overflow: hidden;
    text-overflow: ellipsis;
