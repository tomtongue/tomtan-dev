---
import { DEFAULT_HERO_IMAGE } from '../consts';
import type { CollectionEntry } from 'astro:content';
import FormattedDateUtil from './FormattedDateUtil.astro';

interface Props {
    post: CollectionEntry<'blog'>;
}

const { data, slug } = Astro.props.post;
---

<li class="blog-card">
    <a href={`/blog/${slug}`} class="card">
        <div class="image-container">
            <img
                width={720}
                height={360}
                src={data.heroImage || DEFAULT_HERO_IMAGE}
                alt=""
                loading="lazy"
                decoding="async"
            />
        </div>
        <div class="card-content">
            <div class="metadata">
                <FormattedDateUtil date={data.pubDate} />
                <div class="tags-container">
                    {data.tags.map((tag) => (
                        <span class="tag">{tag}</span>
                    ))}
                </div>
            </div>
            <h3 class="card-title">{data.title}</h3>
        </div>
    </a>
</li>

<style>
	.blog-card {
		--card-bg: #ffffff;
		--card-border: #e5e5e7;
		--card-shadow: 0 2px 4px rgba(0, 0, 0, 0.04), 0 4px 8px rgba(0, 0, 0, 0.06);
		--card-hover-shadow: 0 4px 8px rgba(0, 0, 0, 0.08), 0 8px 16px rgba(0, 0, 0, 0.1);
		
		background: var(--card-bg);
		border-radius: 1.25rem;
		overflow: hidden;
		border: 1px solid var(--card-border);
		box-shadow: var(--card-shadow);
		transition: all 0.3s ease;
		
		width: 100%;
		max-width: 100%;
		margin: 0 auto;
	}
	
	.blog-card:hover {
		transform: translateY(-4px);
		box-shadow: var(--card-hover-shadow);
	}

	@media (max-width: 768px) {
		.blog-card {
			max-width: 100%;
		}
		.card-content {
			padding: 0.875rem;
		}
		.card-title {
			font-size: 1rem;
		}
	}

	.image-container {
		aspect-ratio: 16 / 7;
		overflow: hidden;
		background: #f0f0f2;
		border-bottom: 1px solid var(--card-border);
	}
	
	.card-content {
		padding: 1rem;
		background: var(--card-bg);
	}
	
	.metadata {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		color: #666666;
		font-size: 0.875rem;
	}
	
	/* Tags */
	.tag {
		background: #f5f5f7;
		color: #666666;
		padding: 0.2rem 0.5rem;
		border-radius: 0.75rem;
		font-size: 0.7rem;
		font-weight: 500;
		transition: background-color 0.2s ease;
	}
	
	.tag:hover {
		background: #e5e5e7;
	}

	.card-title {
		font-size: 1.1rem;
		font-weight: 600;
		line-height: 1.3;
		color: #000000;
		margin: 0.5rem 0 0 0;
	}

	@media (prefers-color-scheme: dark) {
		.blog-card {
			--card-bg: #1d1d1f;
			--card-border: #2d2d2f;
			--card-shadow: 0 2px 4px rgba(0, 0, 0, 0.2), 0 4px 8px rgba(0, 0, 0, 0.3);
			--card-hover-shadow: 0 4px 8px rgba(0, 0, 0, 0.3), 0 8px 16px rgba(0, 0, 0, 0.4);
		}
	
		.image-container {
			background: #2d2d2f;
		}
	
		.tag {
			background: #2d2d2f;
			color: #a8a8a8;
		}
	
		.tag:hover {
			background: #3d3d3f;
		}
	
		.card-title {
			color: #ffffff;
		}
	
		.metadata {
			color: #a8a8a8;
		}
	}
</style>
