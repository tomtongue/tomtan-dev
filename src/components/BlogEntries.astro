---
import type { CollectionEntry } from 'astro:content';
import FormattedDateUtil from './FormattedDateUtil.astro';

interface Props {
    post: CollectionEntry<'blog'>;
}

const { data, slug } = Astro.props.post;
---

<li class="blog-card">
    <a href={`/blog/${slug}`} class="card">
        <div class="card-content">
            <h3 class="card-title">{data.title}</h3>
            <div class="metadata">
                <FormattedDateUtil date={data.pubDate} />
                <span class="separator">|</span>
                <div class="tags-container">
                    {data.tags.map((tag) => (
                        <span class="tag">{tag}</span>
                    ))}
                </div>
            </div>
            {data.description && (
                <p class="card-description">{data.description}</p>
            )}
        </div>
    </a>
</li>

<style>
	.blog-card {
		--card-bg: #ffffff;
		--card-border: #e5e5e7;
		--card-shadow: 0 1px 3px rgba(0, 0, 0, 0.04);
		--card-hover-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);

		background: var(--card-bg);
		border-radius: 1rem;
		overflow: hidden;
		border: 1px solid var(--card-border);
		box-shadow: var(--card-shadow);
		transition: all 0.2s ease;

		width: 100%;
		max-width: 100%;
		margin: 0 auto;
	}

	.blog-card:hover {
		box-shadow: var(--card-hover-shadow);
		transform: translateY(-1px);
	}

	.card {
		display: block;
		text-decoration: none;
		color: inherit;
	}

	.card-content {
		padding: 1.5rem 1.75rem;
		background: var(--card-bg);
	}

	.card-title {
		font-size: 1.5rem;
		font-weight: 600;
		line-height: 1.4;
		color: #000000;
		margin: 0 0 0.5rem 0;
	}

	.metadata {
		display: flex;
		flex-direction: row;
		align-items: center;
		gap: 0.5rem;
		color: #666666;
		font-size: 0.875rem;
		margin-bottom: 0.5rem;
		flex-wrap: wrap;
	}

	.separator {
		color: #cccccc;
		margin: 0 0.25rem;
	}

	.tags-container {
		display: flex;
		gap: 0.375rem;
		align-items: center;
		flex-wrap: wrap;
	}

	/* Tags */
	.tag {
		background: #f5f5f7;
		color: #666666;
		padding: 0.2rem 0.5rem;
		border-radius: 0.5rem;
		font-size: 0.75rem;
		font-weight: 500;
		transition: background-color 0.2s ease;
	}

	.tag:hover {
		background: #e5e5e7;
	}

	.card-description {
		font-size: 0.95rem;
		line-height: 1.6;
		color: #666666;
		margin: 0;
		display: -webkit-box;
		-webkit-line-clamp: 4;
		-webkit-box-orient: vertical;
		overflow: hidden;
		text-overflow: ellipsis;
	}

	@media (max-width: 768px) {
		.card-content {
			padding: 1.25rem 1.5rem;
		}
		.card-title {
			font-size: 1.25rem;
		}
		.card-description {
			font-size: 0.9rem;
		}
	}

	@media (prefers-color-scheme: dark) {
		.blog-card {
			--card-bg: #1d1d1f;
			--card-border: #2d2d2f;
			--card-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
			--card-hover-shadow: 0 2px 6px rgba(0, 0, 0, 0.4);
		}

		.tag {
			background: #2d2d2f;
			color: #a8a8a8;
		}

		.tag:hover {
			background: #3d3d3f;
		}

		.card-title {
			color: #ffffff;
		}

		.card-description {
			color: #a8a8a8;
		}

		.metadata {
			color: #a8a8a8;
		}

		.separator {
			color: #4d4d4f;
		}
	}
</style>
