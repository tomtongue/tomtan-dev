---
const today = new Date();
---

<footer class="footer">
    <div class="footer-content">
        <div class="footer-copyright">
            &copy; {today.getFullYear()} Tomohiro Tanaka. All rights reserved.
        </div>
    </div>
</footer>

<style>
.footer {
    --footer-background: #ffffff;
    --footer-text: #1d1d1f;
    --footer-border: #e5e5e5;
    --footer-height: 4rem;
    --footer-padding: 2rem;

    width: 100%;
    background-color: var(--footer-background);
    padding: var(--footer-padding) 0;

    margin-top: auto;
    flex-shrink: 0;
}

.footer-content {
    max-width: var(--content-width, 75rem);
    margin: 0 auto;
    padding: var(--footer-padding) var(--content-padding, 2rem) 0;
    border-top: 1px solid var(--footer-border);
    display: flex;
    justify-content: center;
    align-items: center;
}

.footer-copyright {
    font-family: -apple-system, BlinkMacSystemFont, "SF Pro Text", "Helvetica Neue", sans-serif;
    font-size: 0.875rem;
    color: var(--footer-text);
    text-align: center;
    line-height: 1.4;
}

@media (max-width: 768px) {
    .footer {
        --footer-padding: 1.5rem;
    }

    .footer-content {
        flex-direction: column;
        gap: 1rem;
        margin: 0 1rem;
    }
}

@media (prefers-color-scheme: dark) {
    .footer {
        --footer-background: #1e1e1e;
        --footer-text: #ffffff;
        --footer-border: #333333;
    }
}

@media print {
    .footer {
        display: none;
    }
}

:global(html) {
    height: 100%;
}

:global(body) {
    min-height: 100%;
    display: flex;
    flex-direction: column;
}

:global(body > div) {
    flex: 1 0 auto;
    display: flex;
    flex-direction: column;
}
</style>