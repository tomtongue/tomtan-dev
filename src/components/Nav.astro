---
import Icon from './Icon.astro';
import type { iconPaths } from './IconPaths';

const iconLinks: { label: string; href: string; icon: keyof typeof iconPaths }[] = [
	{ label: 'GitHub', href: 'https://github.com/tomtongue/tomtan-dev', icon: 'github-logo' },
	{ label: 'LinkedIn', href: 'https://linkedin.com/in/ttomtan', icon: 'linkedin-logo' },
];
---

<nav class="nav-container" id="main-nav">
    <div class="nav-content">
        <a href="/" class="nav-logo">
            <Icon icon="terminal-window" color="var(--nav-logo-color)" size="1.6em" />
            <span class="nav-title">tomtan.dev</span>
        </a>

        <div class="nav-social">
            {iconLinks.map(({ href, icon, label }) => (
                <a href={href} class="social-link" target="_blank" rel="noopener">
                    <span class="sr-only">{label}</span>
                </a>
            ))}
        </div>

        <button class="mobile-menu-button" aria-label="Menu" aria-expanded="false">
            <Icon icon="list" />
        </button>
    </div>

    <div class="mobile-menu" hidden>
        <div class="mobile-social">
            {iconLinks.map(({ href, icon, label }) => (
                <a href={href} class="social-link" target="_blank" rel="noopener">
                    <span class="sr-only">{label}</span>
                    <Icon icon={icon} />
                </a>
            ))}
        </div>
    </div>
</nav>

<script>

// Show Navigation bar
let lastScroll = 0;
const nav = document.getElementById('main-nav');
const scrollThreshold = 50;

function handleScroll() {
    const currentScroll = window.scrollY;
    
    // Detect scroll position
    if (currentScroll <= 0) {
        // Show the bar 
        nav.classList.remove('nav-hidden');
        nav.classList.remove('nav-scrolled');
    } else if (currentScroll > lastScroll && currentScroll > scrollThreshold) {
        // Hide the bar scrolling up
        nav.classList.add('nav-hidden');
        nav.classList.add('nav-scrolled');
    } else if (currentScroll < lastScroll) {
        // Show the bar for scrolling down
        nav.classList.remove('nav-hidden');
        nav.classList.add('nav-scrolled');
    }
    
    lastScroll = currentScroll;
}

let ticking = false;
window.addEventListener('scroll', () => {
    if (!ticking) {
        window.requestAnimationFrame(() => {
            handleScroll();
            ticking = false;
        });
        ticking = true;
    }
});

const menuButton = document.querySelector('.mobile-menu-button');
const mobileMenu = document.querySelector('.mobile-menu');

menuButton?.addEventListener('click', () => {
    const isExpanded = menuButton.getAttribute('aria-expanded') === 'true';
    menuButton.setAttribute('aria-expanded', (!isExpanded).toString());
    mobileMenu.hidden = isExpanded;
});
</script>

<style>
.nav-container {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: var(--nav-height, 4rem);
    background-color: rgba(255, 255, 255, 0.40);
    backdrop-filter: saturate(180%) blur(20px);
    -webkit-backdrop-filter: saturate(180%) blur(20px);
    z-index: 1000;
    transition: transform 0.3s ease, background-color 0.3s ease;
    border-bottom: 1px solid transparent;
}

.nav-scrolled {
    border-bottom-color: var(--border-color, rgba(0, 0, 0, 0.1));
}

.nav-hidden {
    transform: translateY(-100%);
}

.nav-content {
    max-width: var(--content-width, 75rem);
    margin: 0 auto;
    height: 100%;
    padding: 0 var(--content-padding, 2rem);
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.nav-logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: var(--text-primary);
    font-weight: 600;
}

.nav-title {
    font-size: 1.125rem;
    letter-spacing: -0.01em;
}

/* メインナビゲーションリンク */
.nav-links {
    display: flex;
    gap: 2rem;
    margin: 0 2rem;
}

.nav-link {
    text-decoration: none;
    color: var(--text-secondary);
    font-size: 0.9375rem;
    font-weight: 500;
    padding: 0.5rem 0;
    position: relative;
    transition: color 0.2s ease;
}

.nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: var(--primary-color);
    transform: scaleX(0);
    transition: transform 0.2s ease;
}

.nav-link:hover,
.nav-link.active {
    color: var(--text-primary);
}

.nav-link.active::after {
    transform: scaleX(1);
}

.nav-social {
    display: flex;
    gap: 1rem;
}

.social-link {
    color: var(--text-secondary);
    transition: color 0.2s ease;
    padding: 0.5rem;
    border-radius: 0.5rem;
}

.social-link:hover {
    color: var(--primary-color);
}

.mobile-menu-button {
    display: none;
    background: none;
    border: none;
    padding: 0.5rem;
    color: var(--text-primary);
    cursor: pointer;
}

.mobile-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background-color: var(--background-color);
    padding: 1rem;
    border-top: 1px solid var(--border-color);
    box-shadow: var(--shadow-md);
}

@media (max-width: 768px) {
    .nav-links,
    .nav-social {
        display: none;
    }

    .mobile-menu-button {
        display: block;
    }

    .mobile-menu:not([hidden]) {
        display: block;
    }

    .mobile-links {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .mobile-social {
        display: flex;
        justify-content: center;
    }
}

@media (prefers-color-scheme: dark) {
    .nav-container {
        background-color:  rgba(30,30,30,0.4)
    }
}

@media (prefers-reduced-motion: reduce) {
    .nav-container,
    .nav-link::after {
        transition: none;
    }
}
</style>